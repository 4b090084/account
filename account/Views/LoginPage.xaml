<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="account.Views.LoginPage"
             Title="">
    <StackLayout Padding="20">
        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*" Margin="0,0,0,20">
            <Label Text="帳號" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
            <Entry x:Name="UIDEntry" Placeholder="輸入帳號" Grid.Row="0" Grid.Column="1"/>

            <Label Text="密碼" VerticalOptions="Center" Grid.Row="1" Grid.Column="0"/>
            <Entry x:Name="UPwdEntry" Placeholder="輸入密碼" IsPassword="True" Grid.Row="1" Grid.Column="1"/>
        </Grid>

        <Button Text="登入" Clicked="Login_Clicked" Margin="0,0,0,10"/>
        <Button Text="註冊" Clicked="Register_Clicked"/>
    </StackLayout>
</ContentPage>