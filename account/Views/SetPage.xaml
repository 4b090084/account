<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="account.Views.SetPage"
             Title="">
    <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*" Padding="20">
        <!-- Row 0 -->
        <Image Grid.Row="0" Grid.Column="0" Source="set.png" Aspect="AspectFit" />
        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <Button x:Name="EnableNotificationBtn" Text="更改背景" Clicked="ChangeBackground_Clicked" />
          
        </StackLayout>

        <!-- Row 1 -->
        <Image Grid.Row="1" Grid.Column="0" Source="set.png" Aspect="AspectFit" />
        <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <Button Text="回報問題" Clicked="ReportIssue_Clicked" />
            <Button Text="常見問題" Clicked="FAQ_Clicked" />
        </StackLayout>
    </Grid>
</ContentPage>